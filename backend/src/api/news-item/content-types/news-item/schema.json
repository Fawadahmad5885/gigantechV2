{
  "kind": "collectionType",
  "collectionName": "news_items",
  "info": {
    "singularName": "news-item",
    "pluralName": "news-items",
    "displayName": "NewsItem",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": false
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "event",
        "blog",
        "news"
      ]
    },
    "author": {
      "type": "string"
    },
    "date": {
      "type": "date"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "content": {
      "type": "text"
    },
    "publishedDate": {
      "type": "date",
      "required": true
    },
    "tags": {
      "type": "component",
      "repeatable": true,
      "component": "texts.tag-item"
    },
    "description": {
      "type": "text",
      "required": true
    },
    "readminutes": {
      "type": "integer",
      "default": 5
    },
    "landing_page": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::landing-page.landing-page",
      "inversedBy": "news_items"
    },
    "news_blogs_page": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::news-blogs-page.news-blogs-page",
      "inversedBy": "news_items"
    }
  }
}
